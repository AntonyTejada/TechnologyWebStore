@model IEnumerable<ProductModel>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-white" asp-action="UpsertProduct" style="cursor:pointer">
            <i class="fas fa-edit" aria-hidden="true"> Create New Product</i>
        </a>
    </div>
</div>

<br />

<div class="p-lg-1 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%" >
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th>Description</th>
                <th>Memory</th>
                <th>Storage Capacity</th>
                <th>Resolution Image</th>
                <th>Image Product</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) { 
            <tr role="row" class="odd">
                <td class="sorting_1">@product.NameProduct</td>
                <td>@product.DescriptionProduct</td>
                <td align="right">@product.MemoryProduct GB</td>
                <td align="right">@product.StorageCapacityProduct GB</td>
                <td align="right">@product.ResolutionImageProduct px</td>
                <td><img src="@product.ImageUrlProduct" class="card-img-top" alt="..." style="height:80px; width:80px;"></td>
                <td width="120px" align="right">@product.PriceProduct.ToString("c")</td>
                <td width="200px"> 
                    <div class="text-center">
                        <a href=@("/Admin/UpsertProduct/"+product.IdProduct) class="btn btn-success text-white" style="cursor:pointer">
                            <i class="fas fa-edit" aria-hidden="true"> UPDATE</i>
                        </a>
                        <a href=@("/Admin/DeleteProduct/"+product.IdProduct) class="btn btn-danger text-white" style="cursor:pointer">
                            <i class="fas fa-trash-alt" aria-hidden="true"> DELETE</i>
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>